<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_card_info"
    android:orientation="vertical"
    android:background="#dee4ee"
    android:padding="@dimen/espacio_norma_1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:id="@+id/new_title"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:textSize="20dp"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/espacio_norma_1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/new_severity"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:textSize="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/new_details"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:textSize="16dp"
                android:text="Aqui iría la información detallada. Aqui iría la información detallada.
                Aqui iría la información detallada. Aqui iría la información detallada. Aqui iría la información detallada.
                Aqui iría la información detallada. Aqui iría la información detallada. Aqui iría la información detallada."/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/new_date"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="50dp"
                android:textSize="12dp"
                android:gravity="right"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>
