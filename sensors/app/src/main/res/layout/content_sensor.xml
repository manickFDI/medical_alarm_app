<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_sensor" tools:context=".SensorActivity">

    <TextView android:text="Latitude: " android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tag_latitude" />

    <TextView
        android:text="Longitude: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tag_longitude"
        android:layout_below="@+id/tag_latitude"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Time: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tag_time"
        android:layout_below="@+id/tag_longitude"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="NO VALUE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/value_latitude"
        android:layout_above="@+id/tag_longitude"
        android:layout_alignLeft="@+id/value_longitude"
        android:layout_alignStart="@+id/value_longitude" />

    <TextView
        android:text="NO VALUE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/value_longitude"
        android:layout_below="@+id/value_latitude"
        android:layout_alignLeft="@+id/value_time"
        android:layout_alignStart="@+id/value_time" />

    <TextView
        android:text="NO VALUE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/value_time"
        android:layout_alignTop="@+id/tag_time"
        android:layout_alignLeft="@+id/value_magnetometer"
        android:layout_alignStart="@+id/value_magnetometer" />

    <TextView
        android:text="Magnetometer: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tag_magnetometer"
        android:layout_below="@+id/tag_time"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="MGT Accuracy: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tag_mgt_accuracy"
        android:layout_below="@+id/tag_magnetometer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="NO VALUE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/value_magnetometer"
        android:layout_alignTop="@+id/tag_magnetometer"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="NO VALUE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/value_magnetometer_accuracy"
        android:layout_below="@+id/value_magnetometer"
        android:layout_alignLeft="@+id/value_magnetometer"
        android:layout_alignStart="@+id/value_magnetometer" />

    <TextView
        android:text="Accelerometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tag_accelerometer"
        android:layout_below="@+id/tag_mgt_accuracy"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="ACC Accuracy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tag_accelerometer_accuracy"
        android:layout_below="@+id/tag_accelerometer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tag_light"
        android:layout_below="@+id/tag_accelerometer_accuracy"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Light Accuracy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tag_light_accuracy"
        android:layout_below="@+id/tag_light"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="NO VALUE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/value_accelerometer"
        android:layout_alignTop="@+id/tag_accelerometer"
        android:layout_alignLeft="@+id/value_magnetometer_accuracy"
        android:layout_alignStart="@+id/value_magnetometer_accuracy" />

    <TextView
        android:text="NO VALUE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/value_accelerometer_accuracy"
        android:layout_below="@+id/value_accelerometer"
        android:layout_alignLeft="@+id/value_accelerometer"
        android:layout_alignStart="@+id/value_accelerometer" />

    <TextView
        android:text="NO VALUE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/value_light"
        android:layout_below="@+id/value_accelerometer_accuracy"
        android:layout_alignLeft="@+id/value_accelerometer_accuracy"
        android:layout_alignStart="@+id/value_accelerometer_accuracy" />

    <TextView
        android:text="NO VALUE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/value_light_accuracy"
        android:layout_below="@+id/value_light"
        android:layout_alignLeft="@+id/value_light"
        android:layout_alignStart="@+id/value_light" />

    <TextView
        android:text="Battery status:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tag_battery"
        android:layout_below="@+id/tag_light_accuracy"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="NO VALUE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/value_battery"
        android:layout_alignTop="@+id/tag_battery"
        android:layout_alignLeft="@+id/value_light_accuracy"
        android:layout_alignStart="@+id/value_light_accuracy" />
</RelativeLayout>
